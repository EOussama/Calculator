<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Calculator" Height="331.333" Width="384.5" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!-- First row -->
        <TextBox
            x:Name="resCreen"
            Width="335"
            Height="50"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Margin="0, 0, 0, 10"
            Padding="10, 7"
            FontSize="24"
            IsReadOnly="True"/>

        <!-- Second row -->
        <Button
            x:Name="CE"
            Grid.Row="2"
            Grid.Column="2"
            BorderThickness="0"
            Cursor="Hand"
            Content="CE"/>

        <Button
            x:Name="C"
            Grid.Row="2"
            Grid.Column="3"
            BorderThickness="0"
            Cursor="Hand"
            Content="C"/>

        <Button
            x:Name="optDiv"
            Grid.Row="2"
            Grid.Column="4"
            BorderThickness="0"
            Cursor="Hand"
            Content="/"/>

        <!-- Third row -->
        <Button
            x:Name="num7"
            Grid.Row="3"
            Grid.Column="1"
            BorderThickness="0"
            Cursor="Hand"
            Content="7"/>

        <Button
            x:Name="num8"
            Grid.Row="3"
            Grid.Column="2"
            BorderThickness="0"
            Cursor="Hand"
            Content="8"/>

        <Button
            x:Name="num9"
            Grid.Row="3"
            Grid.Column="3"
            BorderThickness="0"
            Cursor="Hand"
            Content="9"/>

        <Button
            x:Name="optMul"
            Grid.Row="3"
            Grid.Column="4"
            BorderThickness="0"
            Cursor="Hand"
            Content="*"/>

        <!-- Fourth row -->
        <Button
            x:Name="num4"
            Grid.Row="4"
            Grid.Column="1"
            BorderThickness="0"
            Cursor="Hand"
            Content="4"/>

        <Button
            x:Name="num5"
            Grid.Row="4"
            Grid.Column="2"
            BorderThickness="0"
            Cursor="Hand"
            Content="5"/>

        <Button
            x:Name="num6"
            Grid.Row="4"
            Grid.Column="3"
            BorderThickness="0"
            Cursor="Hand"
            Content="6"/>

        <Button
            x:Name="optMin"
            Grid.Row="4"
            Grid.Column="4"
            BorderThickness="0"
            Cursor="Hand"
            Content="-"/>

        <!-- Fifth row -->
        <Button
            x:Name="num1"
            Grid.Row="5"
            Grid.Column="1"
            BorderThickness="0"
            Cursor="Hand"
            Content="1"/>

        <Button
            x:Name="num2"
            Grid.Row="5"
            Grid.Column="2"
            BorderThickness="0"
            Cursor="Hand"
            Content="2"/>

        <Button
            x:Name="num3"
            Grid.Row="5"
            Grid.Column="3"
            BorderThickness="0"
            Cursor="Hand"
            Content="3"/>

        <Button
            Grid.Row="5"
            Grid.Column="4"
            BorderThickness="0"
            Cursor="Hand"
            Content="+" 
            Click="optPlus"/>

        <!-- Sixth row -->
        <Button
            x:Name="num0"
            Grid.Row="6"
            Grid.Column="1"
            BorderThickness="0"
            Cursor="Hand"
            Content="0"/>

        <Button
            x:Name="numDec"
            Grid.Row="6"
            Grid.Column="2"
            BorderThickness="0"
            Cursor="Hand"
            Content="."/>

        <Button
            Grid.Row="6"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            BorderThickness="0"
            Cursor="Hand"
            Content="=" Click="Button_Click"/>
    </Grid>
</Window>
